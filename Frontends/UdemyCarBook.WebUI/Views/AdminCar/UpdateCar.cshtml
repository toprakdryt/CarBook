@model UpdateCarDto

@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">


                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Araç Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Araç ile ilgili temel bilgilerd eksiksiz doldurmaniz önemlidir.
                            Veri girişlerinden sonra kaydet butonuna tıklayarak güncelleme işlemini tamamlayabilirsiniz
                        </p>

                        <form method="post">
                            <input type="hidden" asp-for="CarID"/> 
                            <div class="form-group">
                                <label for="exampleInputBrand">Marka</label>
                                @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Model</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Model Girişi Yapınız">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputCoverImageURL">
                                    Kapak Fotoğrafı

                                </label>
                                <input type="text" class="form-control" id="exampleInputCoverImageURL" asp-for="CoverImageURL" placeholder="Kapak Fotoğrafı Linkini Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputKm">Km</label>
                                <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Km Bilgisi Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTransmission">Vites Türü</label>
                                <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder="Vites Türünü Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputSeat"> Koltuk Sayısı</label>
                                <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Koltuk Sayısı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLougage"> Bagaj Sayısı</label>
                                <input type="number" class="form-control" id="exampleInputLougage" asp-for="Luggage" placeholder="Bagaj Sayısı Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFuel"> Yakıt Türü</label>
                                <input type="text" class="form-control" id="exampleInputLougage" asp-for="Fuel" placeholder="Yakıt Türünü Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLougage"> Büyük Kapak Fotoğrafı</label>
                                <input type="text" class="form-control" id="exampleInputLougage" asp-for="BigImageURL" placeholder="Araç Detayında Gözükecek Kapak Fotoğraf Linki">
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Kaydet</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>
            </div>
        </div>
    </div>
</div>