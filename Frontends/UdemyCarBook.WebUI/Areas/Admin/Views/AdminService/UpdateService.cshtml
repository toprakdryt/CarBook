﻿
@model UpdateServiceDto

@{
    ViewData["Title"] = "CreateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">


                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Hizmet Sayfası Veri Düzenle Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfa ve hizmetler bölümünde yer alan hizmet listesinin admin tarafındaki işlemlerini aşağıdaki sayfadan gerçekleştirebilirsiniz.
                            Tema bütünlüğünü korumak adına 4 tane hizmet girişi yapınız.
                        </p>

                        <form method="post">
                            <input type="hidden" asp-for="ServiceID" />"
                            <div class="form-group">
                                <label for="exampleInputTitle">Hizmet Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Hizmet Başlığını Giriniz">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputDescription">Hizmet Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Hizmet Açıklamasını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIconURL">Hizmet İkon URL</label>
                                <input type="text" class="form-control" id="exampleInputIconURL" asp-for="Icon" placeholder="Hizmet Icon URL Linkini Giriniz">
                            </div>


                            <button type="submit" class="btn btn-success waves-effect waves-light">Hizmet Bilgisini Düzenle</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>
            </div>
        </div>
    </div>
</div>